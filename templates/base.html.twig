<!DOCTYPE html>
<html lang="fr_FR">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon"  type="image/png" href={{ asset('ressources/favicon.png')}} >
        <link rel="stylesheet" href="{{ asset("css/style.css") }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">


        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

    </head>
    <body>
    <header>
        <h1 style="text-align: center">
        <img src=" {{ asset("ressources/logo.png") }}" alt="" id="logo">
        Fresh Bucket List
        </h1>
        {% if not app.user %}

            <p style="text-align: end"><a href="{{ path("app_login") }}">Se connecter</a>
            <a href="{{ path("app_register") }}">S'inscrire</a></p>
        {% else %}
            <p style="text-align: end">{{ app.user.email }}
                <a href="{{ path("app_logout") }}">Se déconnecter</a></p>
        {% endif %}

    </header>
    <h3>Navigation : </h3>

    <a href="{{ path("main_home") }}">Home</a>
    <a href = {{ path("wish_list") }}>Wishlist</a>
    {% if app.user %}
        <a href="{{ path("wish_ajout") }}">Ajouter une idée</a>
    {% endif %}

    {% block body %}{% endblock %}

    <footer>
        <a href="{{ path("main_about_us") }}" style="text-align: center">About us</a>
        <p style="">@BucketList</p>
    </footer>
    </body>

</html>
